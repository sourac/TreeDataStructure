package dsnetbean;

/**
 *
 * @author atul
 */
public class BinarySearchTree {

    Node root;

    public BinarySearchTree() {
        this.root = null;
    }

    public static void main(String[] args) {
        BinarySearchTree tree = new BinarySearchTree();
        tree.insert(50);
        tree.insert(30);
        tree.insert(20);
        tree.insert(40);
        tree.insert(70);
        tree.insert(60);
        tree.insert(80);
        tree.inorder();
    }

    private void insert(int key) {
        root = insertRec(root, key);
    }

    /*Recursive function to insert a new key into binary Search Tree*/
    private Node insertRec(Node root, int key) {
        /*if the tree is empty, insert the key as the node*/
        if (root == null) {
            root = new Node(key);
            return root;
        }

        if (key < root.key) {
            root.left = insertRec(root.left, key);
        } else if (key > root.key) {
            root.right = insertRec(root.right, key);
        }

        return root;
    }

    private void inorder() {
        inorderRecForBST(root);
    }

    /*Utility function to do the inorder traversal of the Binary Search Tree*/
    private void inorderRecForBST(Node root) {
        if(root!=null){
            inorderRecForBST(root.left);
            System.out.println(root.key);
            inorderRecForBST(root.right);
        }
    }



}
